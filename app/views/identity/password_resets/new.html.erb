<%= render "shared/alert", alert: %>
<%= render "shared/notice", notice: %>

<div class="border-b border-gray-200 pb-5 pt-5">
  <h1 class="text-base font-semibold leading-6 text-gray-900">Passwort vergessen?</h1>
</div>

<%= render_form_with(url: identity_password_reset_path, class: "space-y-6") do |f| %>
  <div>
    <%= f.label :email, label: "Email" %>
    <%= f.text_field :email, autofocus: true, autocomplete: "email", hint: "Bitte gebe deine Email-Adresse an." %>
  </div>

  <div>
    <%= f.submit "Sende Anleitung um das Passwort zurüchzusetzen", class: button_classes.render(size: :lg) %>
  </div>

  <div class="text-sm leading-6">
    <%= link_to "zurück", sign_in_path, class: link_classes %>
  </div>

<% end %>
