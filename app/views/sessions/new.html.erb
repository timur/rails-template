<%= render "shared/alert", alert: %>
<%= render "shared/notice", notice: %>

<%= render_form_with(url: sign_in_path, class: "space-y-6") do |f| %>
  <div>
    <%= f.label :email, label: "Email" %>
    <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div>
    <%= f.label :password, label: "Passwort" %>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="flex items-center justify-between">
    <div class="text-sm leading-6">
      <%= link_to "Passwort vergessen?", new_identity_password_reset_path, class: link_classes %>
    </div>
  </div>

  <div>
    <%= f.submit "Einloggen", class: button_classes.render(size: :lg) %>
  </div>

  <div>
    <%= link_to "Account erstellen", sign_up_path, class: link_classes %>
  </div>
<% end %>
