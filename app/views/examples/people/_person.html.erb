<div class="table-row" id="<%= dom_id(person) %>">
  <div class="table-cell whitespace-nowrap border-b w-2">
  </div>
  <div class="table-cell whitespace-nowrap align-top h-18 border-b">
    <div class="px-6 py-3">
      <div class="flex items-center gap-x-3">
        <img class="inline-block h-[2.375rem] w-[2.375rem] rounded-full" src="https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80" alt="Image Description">
        <div class="grow">
          <span class="block text-sm font-semibold text-gray-800 dark:text-gray-200"><%= person.name %></span>
          <span class="block text-sm text-gray-500"><%= person.email %></span>
        </div>
      </div>
    </div>
  </div>
  <div class="table-cell whitespace-nowrap align-top h-18 border-b">
    <div class="px-6 py-3">
      <span class="block text-sm font-semibold text-gray-800 dark:text-gray-200"><%= person.position %></span>
      <span class="block text-sm text-gray-500"><%= person.department %></span>
    </div>
  </div>
  <div class="table-cell whitespace-nowrap align-top h-18 border-b">
    <div class="px-6 py-3">
      <%= person_status person.status %>
    </div>
  </div>
  <div class="table-cell whitespace-nowrap align-top h-18 border-b">
    <div class="px-6 py-3">
      <div class="flex items-center gap-x-3">
        <span class="text-xs text-gray-500">1/5</span>
        <div class="flex w-full h-1.5 bg-gray-200 rounded-full overflow-hidden dark:bg-gray-700">
          <div class="flex flex-col justify-center overflow-hidden bg-gray-800 dark:bg-gray-200" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
      </div>
    </div>
  </div>
  <div class="table-cell whitespace-nowrap align-top h-18 border-b">
    <div class="px-6 py-3">
      <span class="text-sm text-gray-500"><%= I18n.localize person.created_at, format: :short %></span>
    </div>
  </div>
  <div class="table-cell whitespace-nowrap align-top h-180 border-b">
    <div class="p-6 flex items-center gap-x-2">
      <%= link_to edit_examples_person_path(person),
        class: "text-gray-600 hover:text-gray-700",
        data: {
          turbo_frame: "slide-over"
        } do %>
        <%= inline_svg_tag "heroicons-pencil.svg", class: "w-5 h-5" %>
      <% end %>
      <%= link_to examples_person_path(person),
            data: {
              turbo_method: :delete,
              turbo_confirm: { message: "Wollen Sie die Person löschen?", title: "Löschen" }
            },
            class: "text-red-600 hover:text-red-700" do %>
        <%= inline_svg_tag "heroicons-trash.svg", class: "w-5 h-5 text-red-600" %>
      <% end %>
    </div>
  </div>
</div>
